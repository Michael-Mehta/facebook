<% if current_user %>

<h1> My Posts </h1>

<%= link_to 'Create a Post', new_post_path %>




<% current_user.posts.each do |p|%>
    <div class='big-tile'>
      <div class='tile'>
        <% if user_signed_in? %>
         <strong>@<%= p.user.username %></strong>
        <% end %>
        
        <p><em><%= p.body %></em></p>
      </div>
      <div class='show'>
          <%= link_to 'View Post', p%>
      </div>
    </div>
  <% end %>
</div>

<% else %>
  <p>Please sign in to view the rest of your profile page</p>
  <%= link_to "Log in", new_user_session_path %>
<% end %>